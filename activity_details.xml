<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/toolBar"
        android:background="#FAA039" >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="פרטי המתכון"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="30sp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textView" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </RelativeLayout>







    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="#FAA039"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/relativeLayout">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="אישור"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="38dp"
            android:onClick="dSave"
            android:background="@drawable/buttoncustom2"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="ביטול"
            android:id="@+id/button"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="32dp"
            android:onClick="dCanceled"
            android:background="@drawable/buttoncustom2"/>
    </RelativeLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolBar"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/relativeLayout"
        android:scrollbarAlwaysDrawHorizontalTrack="true">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="שם המתכון"
            android:id="@+id/rName"
            android:gravity="center"
            android:layout_marginTop="10dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="זמן הכנה משוער"
            android:id="@+id/timeTillDone"
            android:gravity="center"
            android:layout_marginTop="5dp" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/category"
                android:layout_gravity="center"
                android:hint="בחר קטגוריה"
                android:background="@drawable/buttoncustom1"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/people"
                android:layout_gravity="center"
                android:hint="כמות סועדים"
                android:background="@drawable/buttoncustom1"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/hezka"
                android:layout_gravity="center"
                android:hint="חזקה"
                android:background="@drawable/buttoncustom1"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/worth"
                android:layout_gravity="center"
                android:hint="תקציב נדרש"
                android:background="@drawable/buttoncustom1"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lvl"
                android:layout_gravity="center"
                android:hint="רמת מקצועיות"
                android:background="@drawable/buttoncustom1"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/hollyday"
                android:layout_gravity="center"
                android:hint="חג"
                android:background="@drawable/buttoncustom1"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/halfy"
                android:layout_gravity="center"
                android:hint="רמת בריאות"
                android:background="@drawable/buttoncustom1"/>
    </LinearLayout>


</RelativeLayout>
