<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chatter.android.activity_recpietoupload.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/toolBar"
        android:background="#FAA039" >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="העלה מתכון"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="30sp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </RelativeLayout>







    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/relativeLayout"
        android:background="#FAA039">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="שמור מתכון"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="38dp"
            android:onClick="saveRecData"
            android:background="@drawable/buttoncustom2"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="ביטול"
            android:id="@+id/button"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="32dp"
            android:onClick="cancelRecUpload"
            android:background="@drawable/buttoncustom2"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolBar"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/relativeLayout">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="הזן פרטי מתכון"
            android:id="@+id/button2"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:onClick="insertRecData"
            android:background="@drawable/buttoncustom1"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="הזן רשימת מצרכים"
            android:id="@+id/button3"
            android:layout_below="@+id/button2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="33dp"
            android:onClick="insertIngredients"
            android:background="@drawable/buttoncustom1"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="הזן תהליך הכנה"
            android:id="@+id/button4"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:onClick="insertProcess"
            android:background="@drawable/buttoncustom1"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="הזן שם משתמש"
            android:gravity="center"
            android:id="@+id/UName"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>


</RelativeLayout>
